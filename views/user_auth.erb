<label>
  <span>Mes:</span>
  <select name="month">
    <% (1..12).each do |month| %>
      <% if month == Date.today.month %>
        <option selected value="<%= month %>"><%= month %></option>
      <% else %>
        <option value="<%= month %>"><%= month %></option>
      <% end %>
    <% end %>
  </select>
</label>
